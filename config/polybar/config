;=====================================================
; module/info-pkg-update
;=====================================================
[module/info-pkg-update]
type = custom/script
exec = checkupdates | wc -l | sed 's/^0$/\n/'
interval = 30

format = <label>
format-prefix = "ÔÄõ "
format-prefix-font = 3
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #1793d1

; click-left = i3-sensible-terminal pacman -Syu
click-left = i3-sensible-terminal -- yaourt -Syua &
click-right = i3-sensible-terminal -- yaourt -Syua --noconfirm &

;=====================================================
; module/info-weather: openweathermap-fullfeatured
;=====================================================
[module/info-weather]
type = custom/script
exec = ~/.config/polybar/polybar-scripts/openweathermap-fullfeatured.sh
exec-if = test -x ~/.config/polybar/polybar-scripts/openweathermap-fullfeatured.sh
interval = 600
label-font = 4

;=====================================================
; module/touchpad
;=====================================================
[module/touchpad]
type = custom/script
exec = ~/.config/i3/touchpad.sh status | sed 's/off//'
exec-if = test -x "$HOME/.config/i3/touchpad.sh"
interval = 5
label = "Ô≥∂"
label-font = 3
label-foreground = ${colors.foreground-alt}
format = <label>
format-underline = #c0c0c0
; format-prefix = "Ô≥∂ "
format-prefix-font = 3
format-prefix-foreground = ${colors.foreground-alt}

click-left = ~/.config/i3/touchpad.sh toggle


