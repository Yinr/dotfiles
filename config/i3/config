# Modes Settings
#
# resize window (you can also use the mouse for that)
bindsym $mod1+r mode "resize"
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt
        bindsym Ctrl+h resize shrink width 15 px or 15 ppt
        bindsym Ctrl+j resize grow height 15 px or 15 ppt
        bindsym Ctrl+k resize shrink height 15 px or 15 ppt
        bindsym Ctrl+l resize grow width 15 px or 15 ppt
        bindsym Shift+h resize shrink width 5 px or 5 ppt
        bindsym Shift+j resize grow height 5 px or 5 ppt
        bindsym Shift+k resize shrink height 5 px or 5 ppt
        bindsym Shift+l resize grow width 5 px or 5 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt
        bindsym Ctrl+Left resize shrink width 15 px or 15 ppt
        bindsym Ctrl+Down resize grow height 15 px or 15 ppt
        bindsym Ctrl+Up resize shrink height 15 px or 15 ppt
        bindsym Ctrl+Right resize grow width 15 px or 15 ppt
        bindsym Shift+Left resize shrink width 5 px or 5 ppt
        bindsym Shift+Down resize grow height 5 px or 5 ppt
        bindsym Shift+Up resize shrink height 5 px or 5 ppt
        bindsym Shift+Right resize grow width 5 px or 5 ppt

        # back to normal: Enter or Escape or $mod1+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod1+r mode "default"
}

bindsym $mod1+$mod2+v mode "volume"
mode "volume" {
    # key bindings for volume mode
    # Pulse Audio controls
    bindsym space exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle # mute sound
    bindsym k exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5% #increase sound volume
    bindsym j exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5% #decrease sound volume
    bindsym Shift+k exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +1% #increase sound volume
    bindsym Shift+j exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -1% #decrease sound volume
    bindsym l exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% #increase sound volume
    bindsym h exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% #decrease sound volume
    bindsym Control+k exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% #increase sound volume
    bindsym Control+j exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% #decrease sound volume

    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod1+$mod2+v mode "default"
}

bindsym $mod1+$mod2+p mode "screenshot"
mode "screenshot" {
        # key bindings for screenshot mode

        set $screendir ~/Pictures/Screenshots
        bindsym f exec --no-startup-id maim $screendir/$(date +"%Y%m%d_%H%M%S").png; mode "default"
        bindsym s exec --no-startup-id maim -s $screendir/$(date +"%Y%m%d_%H%M%S").png; mode "default"

        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod1+$mod2+p mode "default"
}

bindsym $mod1+Shift+n mode "numpad"
mode "numpad" {
        # key bindings for screenshot mode

        bindsym --release j exec --no-startup-id xdotool key --delay 0 1
        bindsym --release k exec --no-startup-id xdotool key --delay 0 2
        bindsym --release l exec --no-startup-id xdotool key --delay 0 3
        bindsym --release u exec --no-startup-id xdotool key --delay 0 4
        bindsym --release i exec --no-startup-id xdotool key --delay 0 5
        bindsym --release o exec --no-startup-id xdotool key --delay 0 6
        bindsym --release m exec --no-startup-id xdotool key --delay 0 0
        bindsym --release p exec --no-startup-id xdotool key --delay 0 minus
        bindsym --release semicolon exec --no-startup-id xdotool key --delay 0 asterisk
        bindsym --release equal exec --no-startup-id xdotool key --delay 0 plus

        bindsym Escape mode "default"
        bindsym $mod1+Shift+n mode "default"
}

