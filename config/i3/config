# Modes Settings
#
# resize window (you can also use the mouse for that)
bindsym $mod1+r mode "resize"
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $mod1+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod1+r mode "default"
}

bindsym $mod1+Control+v mode "volume"
mode "volume" {
    # key bindings for volume mode
    # Pulse Audio controls
    bindsym Space exec --no-startup-id pactl set-sink-mute 0 toggle # mute sound
    bindsym k exec --no-startup-id pactl set-sink-volume 0 +5% #increase sound volume
    bindsym j exec --no-startup-id pactl set-sink-volume 0 -5% #decrease sound volume
    bindsym Shift+k exec --no-startup-id pactl set-sink-volume 0 +1% #increase sound volume
    bindsym Shift+j exec --no-startup-id pactl set-sink-volume 0 -1% #decrease sound volume
    bindsym l exec --no-startup-id pactl set-sink-volume 0 +10% #increase sound volume
    bindsym h exec --no-startup-id pactl set-sink-volume 0 -10% #decrease sound volume
    bindsym Control+k exec --no-startup-id pactl set-sink-volume 0 +10% #increase sound volume
    bindsym Control+j exec --no-startup-id pactl set-sink-volume 0 -10% #decrease sound volume

    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod1+Control+v mode "default"
}

bindsym $mod1+p mode "screenshot"
mode "screenshot" {
        # key bindings for screenshot mode

        set $screendir ~/Pictures/Screenshots
        bindsym f exec maim $screendir/$(date +"%Y%m%d_%H%M%S").png; mode "default"
        bindsym s exec maim -s $screendir/$(date +"%Y%m%d_%H%M%S").png; mode "default"

        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod1+p mode "default"
}

